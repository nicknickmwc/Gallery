<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Альбомы"
        android:padding="15dp"
        android:textSize="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </TextView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frag1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/header_title"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintLeft_toLeftOf="@id/header_title"
        app:layout_constraintRight_toRightOf="@id/header_title"

        >
    </androidx.fragment.app.FragmentContainerView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:elevation="10dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView

                android:id="@+id/albums_text_view"
                android:text="Альбомы"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NoActiveTextViewStyle"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView

                android:id="@+id/images_text_view"
                android:text="Изображения"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NoActiveTextViewStyle"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView

                android:id="@+id/videos_text_view"
                android:text="Видео"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NoActiveTextViewStyle"
                >

            </TextView>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>